<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Rejects_Comments_are_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Approval_Status__c, &#39;Rejected&#39;),
  ISBLANK(Comments__c)
)</errorConditionFormula>
    <errorMessage>You must provide comments when rejecting the contract</errorMessage>
</ValidationRule>
