<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ACG_Reason_Is_Null</fullName>
    <active>false</active>
    <description>Reason should not be blank</description>
    <errorConditionFormula>AND(
NOT($Setup.ACG_Skip_Automations__c.ACG_Skip_Validation_Rules__c),
NOT(ISPICKVAL(ACG_Decision__c, &quot;&quot;)),
ISPICKVAL(ACG_Reason__c, &quot;&quot;)
)</errorConditionFormula>
    <errorDisplayField>ACG_Reason__c</errorDisplayField>
    <errorMessage>Reason is null. A value must be selected once decision is updated.</errorMessage>
</ValidationRule>
