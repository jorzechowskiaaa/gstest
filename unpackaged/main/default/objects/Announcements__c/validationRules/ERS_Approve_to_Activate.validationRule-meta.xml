<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ERS_Approve_to_Activate</fullName>
    <active>true</active>
    <description>Prevents activation of Announcements that are not Approved.</description>
    <errorConditionFormula>AND( 
NOT($Setup.ACG_Skip_Automations__c.ACG_Skip_Validation_Rules__c),
   ISPICKVAL( Status__c ,&#39;Active&#39;),
   NOT(ISPICKVAL( Approval_Status__c ,&#39;Approved&#39;))
)</errorConditionFormula>
    <errorMessage>Status cannot be &#39;Active&#39; unless Approved.</errorMessage>
</ValidationRule>
