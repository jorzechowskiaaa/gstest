<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Resource_Absence_Date_and_Time</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISNEW(), OR (
(Start &lt; DATETIMEVALUE(Today())),
((End - Now())*24 &gt; 336)
))</errorConditionFormula>
    <errorMessage>Resource Absence can be created only for future date, and up to 14 Days in the future</errorMessage>
</ValidationRule>
