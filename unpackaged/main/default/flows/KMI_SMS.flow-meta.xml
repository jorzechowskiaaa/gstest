        <label>SMS Loop Enabled and Breakdown SA</label>
        <locationX>182</locationX>
        <locationY>455</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Loop_is_On</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Setup.KMI_SMS_Loop_Settings__c.Enable_KMI_SMS_Loop_Flag__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordTypeId</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>recordTypeId</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_KMI_SMS_Loop_Tracker_record</targetReference>
            </connector>
            <label>Loop is On</label>
        </rules>
    </decisions>
    <description>This will be used to Keeping Members Informed (KMI) through SMS</description>
    <environments>Default</environments>
    <formulas>
        <name>ArrivalWindow</name>
        <dataType>DateTime</dataType>
        <expression>(BLANKVALUE({!$Record.SchedStartTime}, {!$Record.PTA__c}) + (7/24)) - (VALUE(MID({!$Record.Work_Order__r.Timezone_Offset__c},5,2))/24)</expression>
    </formulas>
    <formulas>
        <name>CheckServiceArrivalWindowInPast</name>
        <dataType>Boolean</dataType>
        <expression>IF({!ArrivalWindow}&lt;{!VarCurrentTime}, true, false)</expression>
    </formulas>
    <formulas>
        <name>VarCurrentTime</name>
        <dataType>DateTime</dataType>
        <expression>(NOW()+ (7/24)) - (VALUE(MID({!$Record.Work_Order__r.Timezone_Offset__c},5,2))/24)</expression>
    </formulas>
