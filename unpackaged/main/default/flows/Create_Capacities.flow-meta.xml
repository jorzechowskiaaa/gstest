    <assignments>
        <name>Add_a_Capacity</name>
        <label>Add a Capacity</label>
        <locationX>50</locationX>
        <locationY>398</locationY>
        <assignmentItems>
            <assignToReference>newCapacity.CapacityInHours</assignToReference>
            <operator>Assign</operator>
            <value>
                <numberValue>24.0</numberValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>newCapacity.CapacityInWorkItems</assignToReference>
            <operator>Assign</operator>
            <value>
                <numberValue>100.0</numberValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>newCapacity.ServiceResourceId</assignToReference>
            <operator>Assign</operator>
