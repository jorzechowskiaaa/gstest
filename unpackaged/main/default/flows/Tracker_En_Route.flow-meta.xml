    <assignments>
        <name>Set_ER_Status</name>
        <label>Set ER Status</label>
        <locationX>176</locationX>
        <locationY>158</locationY>
        <assignmentItems>
            <assignToReference>objSA.Status</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>strStatus</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>objSA.SchedStartTime</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>CalcStartTime</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>objSA.SchedEndTime</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>CalcEndTime</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Update_ER_SA</targetReference>
        </connector>
    </assignments>
    <assignments>
        <name>Set_Error_Text_0</name>
        <label>Set Error Text</label>
        <locationX>440</locationX>
        <locationY>398</locationY>
        <assignmentItems>
            <assignToReference>strError</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Error: {!$Flow.FaultMessage}</stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <formulas>
        <name>CalcEndTime</name>
        <dataType>DateTime</dataType>
        <expression>({!$Flow.CurrentDateTime}+(({!EnteredETA}+{!objSA.DurationInMinutes})/1440))</expression>
    </formulas>
    <formulas>
        <name>CalcStartTime</name>
        <dataType>DateTime</dataType>
        <expression>{!$Flow.CurrentDateTime} + ({!EnteredETA} / 1440)</expression>
    </formulas>
    <formulas>
        <name>CalcTowEnd</name>
        <dataType>DateTime</dataType>
        <expression>({!$Flow.CurrentDateTime}+(({!EnteredETA}+(2*{!objSA.DurationInMinutes}))/1440))</expression>
    </formulas>
    <formulas>
        <name>CalcTowStart</name>
        <dataType>DateTime</dataType>
        <expression>({!$Flow.CurrentDateTime}+({!EnteredETA}/1440))+({!objSA.DurationInMinutes}/1440)</expression>
    </formulas>
    <interviewLabel>Tracker - En Route {!$Flow.CurrentDateTime}</interviewLabel>
