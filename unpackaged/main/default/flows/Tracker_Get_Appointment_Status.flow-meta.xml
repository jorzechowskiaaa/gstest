    <formulas>
        <name>BuildName</name>
        <dataType>String</dataType>
        <expression>IF({!Get_Service_Appointment.Contact.LastName} = &quot;XYZ&quot;,&quot;NEED MBR INFO&quot;,{!Get_Service_Appointment.Contact.FirstName} &amp; &quot; &quot; &amp; {!Get_Service_Appointment.Contact.LastName})</expression>
    </formulas>
    <formulas>
        <name>BuildStartTime</name>
        <dataType>String</dataType>
        <expression>IF(DATEVALUE({!LocalPTA}) = TODAY(),&quot;TODAY @ &quot;, &quot; THIS IS AN APPOINTMENT FOR &quot; &amp;  TEXT(DATEVALUE({!LocalPTA})) &amp; &quot; @ &quot;) &amp;
IF(
  OR(
    VALUE( MID( TEXT( {!LocalPTA} ), 12, 2 ) ) = 0,
    VALUE( MID( TEXT( {!LocalPTA} ), 12, 2 ) ) = 12
  ),
  &quot;12&quot;,
  TEXT( 
  VALUE( MID( TEXT( {!LocalPTA} ), 12, 2 ) ) -
   IF( 
     VALUE( MID( TEXT( {!LocalPTA} ), 12, 2 ) ) &lt; 12, 
     0, 
     12 
   ) 
  )
)
&amp; &quot;:&quot; &amp;
MID( TEXT( {!LocalPTA} ), 15, 2 )
&amp; &quot; &quot; &amp;
IF(
  VALUE( MID( TEXT( {!LocalPTA} ), 12, 2 ) ) &lt; 12,
  &quot;AM&quot;,
  &quot;PM&quot;
)</expression>
    </formulas>
    <formulas>
