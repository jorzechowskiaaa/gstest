        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterFormula>AND(
ISPICKVAL({!$Record.Status},&#39;On Location&#39;),
{!$Record.RecordType.Name} = &#39;Tow&#39;,
ISPICKVAL({!$Record.FSL__Related_Service__r.Status},&#39;Tow Loaded&#39;)
)</filterFormula>
